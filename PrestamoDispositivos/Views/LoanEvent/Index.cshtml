@model IEnumerable<PrestamoDispositivos.DTO.LoanEventDTO>
@{
    ViewData["Title"] = "Eventos de Préstamos";
}

<section id="loan-events" class="services section-bg py-5">
    <div class="container">
        <div class="section-title text-center mb-4">
            <h2 class="fw-bold">Gestión de Eventos de Préstamos</h2>
            <p class="text-muted">Consulta y administra los tipos de eventos de préstamo registrados.</p>
        </div>

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Evento
            </a>
        </div>

        <div class="card shadow border-0 rounded-4">
            <div class="card-body table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Identificador</th>
                            <th>Tipo de Préstamo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var evento in Model)
                            {
                                <tr>
                                    <td>@evento.IdEvento</td>
                                    <td>@evento.TipoPrestamos</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@evento.IdEvento" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@evento.IdEvento" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar este evento?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-3">
                                    <i class="bi bi-exclamation-circle"></i> No hay eventos registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
