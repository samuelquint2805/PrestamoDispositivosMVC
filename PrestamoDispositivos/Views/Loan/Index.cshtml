@using PrestamoDispositivos.DTO;
@model IEnumerable<LoanDTO>
@{
    ViewData["Title"] = "Listado de Préstamos";
}

<section id="loans" class="services section-bg py-5">
    <div class="container">
        <div class="section-title text-center mb-4">
            <h2 class="fw-bold">Gestión de Préstamos</h2>
            <p class="text-muted">Consulta, edita o gestiona los préstamos registrados en el sistema.</p>
        </div>

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Nuevo Préstamo
            </a>
        </div>

        <div class="card shadow border-0 rounded-4">
            <div class="card-body table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha del Evento</th>
                            <th>Estado</th>
                            <th>Estudiante</th>
                            <th>Dispositivo</th>
                            <th>Administrador</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var loan in Model)
                            {
                                <tr>
                                    <td>@loan.FechaEvento.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge @(loan.EstadoPrestamo == "Activo" ? "bg-success" : "bg-secondary")">
                                            @loan.EstadoPrestamo
                                        </span>
                                    </td>
                                    <td>@(loan.Estudiante?.Nombre ?? "—")</td>
                                    <td>@(loan.Dispositivo?.Tipo ?? "—")</td>
                                    <td>@(loan.DeviceManager?.Nombre ?? "—")</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@loan.IdPrestamos" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@loan.IdPrestamos" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este préstamo?');">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-3">
                                    <i class="bi bi-exclamation-circle"></i> No hay préstamos registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
