@model PrestamoDispositivos.DTO.LoanDTO

@{
    ViewData["Title"] = "Editar Prestamo";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Editar Préstamo</h2>

    <form asp-action="Edit" asp-route-id="@Model.IdPrestamos" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Fecha del Evento</label>
            <input asp-for="FechaEvento" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado del Préstamo</label>
            <input asp-for="EstadoPrestamo" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estudiante</label>
            <input asp-for="IdEstudiante" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Dispositivo</label>
            <input asp-for="IdDispo" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Administrador</label>
            <input asp-for="IdAdminDev" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo de Préstamo</label>
            <input asp-for="EventoPrestamos.TipoPrestamos" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>
    </form>
</div>
