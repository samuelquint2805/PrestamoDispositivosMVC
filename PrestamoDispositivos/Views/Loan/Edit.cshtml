@model PrestamoDispositivos.DTO.LoanDTO
@{
    ViewData["Title"] = "Editar Préstamo";
    var devices = ViewBag.Devices as List<PrestamoDispositivos.DTO.deviceDTO> ?? new List<PrestamoDispositivos.DTO.deviceDTO>();
    var administrators = ViewBag.Administrators as List<PrestamoDispositivos.DTO.deviceManagerDTO> ?? new List<PrestamoDispositivos.DTO.deviceManagerDTO>();
    var loanEvents = ViewBag.LoanEvents as List<PrestamoDispositivos.DTO.LoanEventDTO> ?? new List<PrestamoDispositivos.DTO.LoanEventDTO>();
}

<section id="edit-loan" class="contact py-5">
    <div class="container">
        <div class="section-title text-center mb-4">
            <h2 class="fw-bold">Editar Préstamo</h2>
            <p class="text-muted">Modifica los datos del préstamo seleccionado.</p>
        </div>

        <div class="card shadow border-0 rounded-4 mx-auto" style="max-width: 700px;">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdPrestamos" />

                    <div class="mb-3">
                        <label asp-for="FechaEvento" class="form-label fw-semibold">Fecha del Evento</label>
                        <input asp-for="FechaEvento" type="date" class="form-control" />
                        <span asp-validation-for="FechaEvento" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="EstadoPrestamo" class="form-label fw-semibold">
                            <i class="bi bi-info-circle me-1"></i> Estado del Préstamo
                        </label>
                        <select asp-for="EstadoPrestamo" class="form-select">
                            <option value="">-- Selecciona un estado --</option>
                            <option value="Nuevo">Nuevo</option>
                            <option value="Activo">Activo</option>
                            <option value="Renovar">Renovar</option>
                            <option value="Cancelar">Cancelar</option>
                            <option value="Finalizado">Finalizado</option>
                        </select>
                        <span asp-validation-for="EstadoPrestamo" class="text-danger"></span>
                    </div>


                    <!-- Dispositivo -->
                    <div class="mb-3">
                        <label asp-for="IdDispo" class="form-label fw-semibold">
                            <i class="bi bi-laptop me-1"></i> Dispositivo Disponible
                        </label>
                        <select asp-for="IdDispo" class="form-select">
                            <option value="">-- Selecciona un dispositivo --</option>
                            @foreach (var device in devices)
                            {
                                <option value="@device.IdDisp">
                                    @device.Tipo - @device.Procesador
                                    @if (device.Almacenamiento != 0)
                                    {
                                        <text>(@device.Almacenamiento)</text>
                                    }
                                </option>
                            }
                        </select>
                        <span asp-validation-for="IdDispo" class="text-danger"></span>
                        @if (!devices.Any())
                        {
                            <small class="text-warning d-block mt-1">
                                <i class="bi bi-exclamation-triangle me-1"></i> No hay dispositivos disponibles en este momento
                            </small>
                        }
                    </div>

                    <!-- Administrador -->
                    <div class="mb-3">
                        <label asp-for="IdAdminDev" class="form-label fw-semibold">
                            <i class="bi bi-person-gear me-1"></i> Administrador Responsable
                        </label>
                        <select asp-for="IdAdminDev" class="form-select">
                            <option value="">-- Selecciona un administrador --</option>
                            @foreach (var admin in administrators)
                            {
                                <option value="@admin.IdAdmin">@admin.Nombre - Usuario: @admin.Usuario</option>
                            }
                        </select>
                        <span asp-validation-for="IdAdminDev" class="text-danger"></span>
                        @if (!administrators.Any())
                        {
                            <small class="text-warning d-block mt-1">
                                <i class="bi bi-exclamation-triangle me-1"></i> No hay administradores disponibles
                            </small>
                        }
                    </div>


                    <!-- Tipo de Evento -->
                    <div class="mb-3">
                        <label asp-for="IdEvento" class="form-label fw-semibold">
                            <i class="bi bi-calendar-check me-1"></i> Tipo de Evento
                        </label>
                        <select asp-for="IdEvento" class="form-select">
                            <option value="">-- Selecciona un tipo de evento --</option>
                            @foreach (var evt in loanEvents)
                            {
                                <option value="@evt.IdEvento">@evt.TipoPrestamos</option>
                            }
                        </select>
                        <span asp-validation-for="IdEvento" class="text-danger"></span>
                        @if (!loanEvents.Any())
                        {
                            <small class="text-warning d-block mt-1">
                                <i class="bi bi-exclamation-triangle me-1"></i> No hay tipos de eventos configurados
                            </small>
                        }
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-warning px-4">
                            <i class="bi bi-save me-1"></i> Actualizar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                            <i class="bi bi-arrow-left-circle me-1"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
