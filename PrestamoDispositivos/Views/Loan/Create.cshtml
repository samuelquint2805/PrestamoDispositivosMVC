@model PrestamoDispositivos.DTO.LoanDTO
@{
    ViewData["Title"] = "Nuevo Préstamo";
}

<section id="create-loan" class="contact py-5">
    <div class="container">
        <div class="section-title text-center mb-4">
            <h2 class="fw-bold">Registrar Nuevo Préstamo</h2>
            <p class="text-muted">Completa los campos para registrar un nuevo préstamo.</p>
        </div>

        <div class="card shadow border-0 rounded-4 mx-auto" style="max-width: 700px;">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="FechaEvento" class="form-label fw-semibold">Fecha del Evento</label>
                        <input asp-for="FechaEvento" type="date" class="form-control" />
                        <span asp-validation-for="FechaEvento" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EstadoPrestamo" class="form-label fw-semibold">Estado</label>
                        <select asp-for="EstadoPrestamo" class="form-select">
                            <option value="">Selecciona...</option>
                            <option>Activo</option>
                            <option>Finalizado</option>
                            <option>Cancelado</option>
                        </select>
                        <span asp-validation-for="EstadoPrestamo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Estudiante</label>
                        <input asp-for="IdEstudiante" class="form-control" placeholder="ID del Estudiante" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dispositivo</label>
                        <input asp-for="IdDispo" class="form-control" placeholder="ID del Dispositivo" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Administrador</label>
                        <input asp-for="IdAdminDev" class="form-control" placeholder="ID del Administrador" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Evento</label>
                        <input asp-for="IdEvento" class="form-control" placeholder="ID del Evento" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                            <i class="bi bi-arrow-left-circle me-1"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
