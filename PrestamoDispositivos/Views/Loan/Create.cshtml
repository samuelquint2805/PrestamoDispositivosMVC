@model PrestamoDispositivos.DTO.LoanDTO

@{
    ViewData["Title"] = "Crear Préstamo";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Registrar Nuevo Préstamo</h2>

    <form asp-action="Create" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Fecha del Evento</label>
            <input asp-for="FechaEvento" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado del Préstamo</label>
            <input asp-for="EstadoPrestamo" class="form-control" placeholder="Activo, Finalizado, Cancelado" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estudiante</label>
            <input asp-for="IdEstudiante" class="form-control" placeholder="ID del Estudiante" />
        </div>

        <div class="mb-3">
            <label class="form-label">Dispositivo</label>
            <input asp-for="IdDispo" class="form-control" placeholder="ID del Dispositivo" />
        </div>

        <div class="mb-3">
            <label class="form-label">Administrador</label>
            <input asp-for="IdAdminDev" class="form-control" placeholder="ID del Administrador" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo de Préstamo</label>
            <input asp-for="EventoPrestamos.TipoPrestamos" class="form-control" placeholder="Creación, Renovación, Cancelación" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Volver</a>
        </div>
    </form>
</div>

