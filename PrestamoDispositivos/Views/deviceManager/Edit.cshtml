@model PrestamoDispositivos.DTO.deviceManagerDTO
@{
    ViewData["Title"] = "Editar Administrador";
}

<!-- Page Title Section -->
<section class="page-title section" style="padding-top: 120px;">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Administradores</span>
        <h2>Editar Administrador</h2>
        <p>Actualiza la información del administrador seleccionado</p>
    </div>
</section>

<!-- Edit Form Section -->
<section id="edit-manager" class="section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <!-- Form Header -->
                        <div class="form-header mb-4">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-pencil-square me-3" style="font-size: 2rem; color: #3b7ddd;"></i>
                                    <div>
                                        <h4 class="mb-1">Editar Información</h4>
                                        <p class="text-muted mb-0">ID: <code>@Model.IdAdmin</code></p>
                                    </div>
                                </div>
                                <div>
                                    <span class="badge bg-primary fs-6">
                                        <i class="bi bi-shield-check me-1"></i>Administrador
                                    </span>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Edit" asp-route-id="@Model.IdAdmin" method="post">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.IdAdmin)

                            <div class="row">

                                <!-- Nombre Completo -->
                                <div class="col-12 mb-3">
                                    <label asp-for="Nombre" class="form-label">
                                        <i class="bi bi-person-circle text-primary me-1"></i>
                                        Nombre Completo
                                    </label>
                                    <input asp-for="Nombre"
                                           class="form-control"
                                           placeholder="Ej: Juan Pérez García"
                                           maxlength="100" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Nombre completo del administrador
                                    </div>
                                </div>

                                

                              

                               

                            </div>

                            <!-- Loans Info -->
                            @if (Model.Loans != null && Model.Loans.Any())
                            {
                                <div class="alert alert-info mb-4" role="alert">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-info-circle me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <h6 class="mb-2">Préstamos asociados</h6>
                                            <p class="mb-0 small">
                                                Este administrador tiene <strong>@Model.Loans.Count préstamo(s)</strong> registrado(s) en el sistema.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Security Guidelines -->
                            <div class="alert alert-warning mb-4" role="alert">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-shield-exclamation me-3" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <h6 class="mb-2">Nota de seguridad</h6>
                                        <p class="mb-0 small">
                                            Al cambiar la contraseña, el administrador deberá usar la nueva contraseña
                                            la próxima vez que inicie sesión. Si no modificas la contraseña, se mantendrá la actual.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Divider -->
                            <hr class="my-4">

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                                </a>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="bi bi-trash me-2"></i>Eliminar
                                    </button>
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>

                <!-- Change History Info Card -->
                <div class="card mt-4 border-0 bg-light" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-clock-history text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-2">Historial de cambios</h6>
                                <p class="mb-0 small text-muted">
                                    Los cambios realizados se guardarán inmediatamente. El administrador podrá seguir
                                    accediendo al sistema con las credenciales actualizadas.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este administrador?</p>
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Información del administrador:</strong>
                    <ul class="mb-0 mt-2">
                        <li><strong>Nombre:</strong> @Model.Nombre</li>
                        <li><strong>Usuario:</strong> @Model.Usuario</li>
                        @if (Model.Loans != null && Model.Loans.Any())
                        {
                            <li><strong>Préstamos asociados:</strong> @Model.Loans.Count</li>
                        }
                    </ul>
                </div>
                <p class="text-danger mb-0">
                    <small><i class="bi bi-exclamation-circle me-1"></i>Esta acción no se puede deshacer y el usuario perderá acceso al sistema.</small>
                </p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <form asp-action="Delete" asp-route-id="@Model.IdAdmin" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Eliminar Administrador
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .form-label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.625rem 0.875rem;
        transition: all 0.3s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3b7ddd;
            box-shadow: 0 0 0 0.2rem rgba(59, 125, 221, 0.15);
        }

    .input-group-text {
        border-radius: 8px 0 0 8px;
        background-color: #f8f9fa;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }

    .input-group .btn {
        border-radius: 0 8px 8px 0;
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .btn {
        border-radius: 8px;
        padding: 0.625rem 1.25rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #3b7ddd;
        border-color: #3b7ddd;
    }

        .btn-primary:hover {
            background-color: #2e6bc6;
            border-color: #2e6bc6;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(59, 125, 221, 0.3);
        }

    .btn-outline-secondary:hover,
    .btn-outline-danger:hover {
        transform: translateY(-2px);
    }

    .text-danger {
        display: block;
        margin-top: 0.25rem;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }

    code {
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        color: #e83e8c;
    }

    .password-strength .progress {
        border-radius: 4px;
        background-color: #e9ecef;
    }

    .progress-bar {
        transition: width 0.3s ease, background-color 0.3s ease;
    }

    .modal-content {
        border-radius: 15px;
    }

    .alert {
        border-radius: 8px;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffc107;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Inicializar animaciones AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });

       

        // Form validation
        const form = document.querySelector('form[method="post"]');
        if (form && !form.action.includes('Delete')) {
            form.addEventListener('submit', function(e) {
                const nombre = document.querySelector('[name="Nombre"]').value;
                

                if (!nombre) {
                    e.preventDefault();
                    alert('Por favor, completa todos los campos requeridos.');
                }
            });
        }
    </script>
}