@model List<PrestamoDispositivos.DTO.deviceManagerDTO>
@{
    ViewData["Title"] = "Gestión de Administradores";
}

<!-- Page Title Section -->
<section class="page-title section" style="padding-top: 120px;">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Administradores</span>
        <h2>Gestión de Administradores</h2>
        <p>Administra los usuarios que tienen acceso al sistema de préstamos de dispositivos</p>
    </div>
</section>

<!-- Managers List Section -->
<section id="managers" class="section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <!-- Action Bar -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">Total de administradores: <span class="badge bg-primary">@Model.Count</span></h4>
                    </div>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-person-plus-fill me-2"></i>Nuevo Administrador
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="row" data-aos="fade-up" data-aos-delay="200">
                <div class="col-12">
                    <div class="card shadow-sm text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-person-x" style="font-size: 4rem; color: #ccc;"></i>
                            <h3 class="mt-3">No hay administradores registrados</h3>
                            <p class="text-muted">Comienza agregando el primer administrador al sistema</p>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="bi bi-person-plus-fill me-2"></i>Crear Primer Administrador
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Managers Table -->
            <div class="row" data-aos="fade-up" data-aos-delay="200">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="ps-4">
                                                <i class="bi bi-person-circle me-2"></i>Nombre
                                            </th>
                                            <th>
                                                <i class="bi bi-calendar-check me-2"></i>Préstamos
                                            </th>
                                            <th class="text-center" style="width: 200px;">
                                                <i class="bi bi-gear me-2"></i>Acciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var manager in Model)
                                        {
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-3">
                                                            <i class="bi bi-person-fill"></i>
                                                        </div>
                                                        <div>
                                                            <strong>@manager.Nombre</strong>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="badge bg-light text-dark border">
                                                        <i class="bi bi-at me-1"></i>@manager.Usuario
                                                    </span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="password-mask">
                                                        <i class="bi bi-key-fill me-1"></i>••••••••
                                                    </span>
                                                </td>
                                                <td class="align-middle">
                                                    @if (manager.Loans != null && manager.Loans.Any())
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-archive me-1"></i>@manager.Loans.Count préstamos
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">
                                                            <i class="bi bi-dash-circle me-1"></i>Sin préstamos
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center align-middle">
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Edit" asp-route-id="@manager.IdAdmin"
                                                           class="btn btn-sm btn-outline-primary"
                                                           title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button"
                                                                class="btn btn-sm btn-outline-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteModal-@manager.IdAdmin"
                                                                title="Eliminar">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>

                                            <!-- Modal de Confirmación de Eliminación -->
                                            <div class="modal fade" id="deleteModal-@manager.IdAdmin" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header border-0">
                                                            <h5 class="modal-title" id="deleteModalLabel">
                                                                <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                                                                Confirmar Eliminación
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>¿Estás seguro de que deseas eliminar al administrador <strong>@manager.Nombre</strong>?</p>
                                                            <div class="alert alert-warning mb-3">
                                                                <i class="bi bi-info-circle me-2"></i>
                                                                <strong>Usuario:</strong> @manager.Usuario
                                                                @if (manager.Loans != null && manager.Loans.Any())
                                                                {
                                                                    <br />
                                                                    <strong>Préstamos asociados:</strong>
 
                                                                    @manager.Loans.Count
                                                                }
                                                            </div>
                                                            <p class="text-danger mb-0">
                                                                <small><i class="bi bi-exclamation-circle me-1"></i>Esta acción no se puede deshacer.</small>
                                                            </p>
                                                        </div>
                                                        <div class="modal-footer border-0">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                <i class="bi bi-x-circle me-1"></i>Cancelar
                                                            </button>
                                                            <form asp-action="Delete" asp-route-id="@manager.IdAdmin" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="bi bi-trash me-1"></i>Eliminar Administrador
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

<!-- Custom Styles -->
<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .table {
        margin-bottom: 0;
    }

        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            padding: 1rem;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
        }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .password-mask {
        font-family: monospace;
        color: #6c757d;
    }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }

    .modal-content {
        border-radius: 15px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffc107;
        border-radius: 8px;
    }
</style>

@section Scripts {
    <script>
        // Inicializar animaciones AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });
    </script>
}