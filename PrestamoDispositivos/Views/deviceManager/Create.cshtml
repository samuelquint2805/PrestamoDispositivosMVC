@model PrestamoDispositivos.DTO.deviceManagerDTO
@{
    ViewData["Title"] = "Nuevo Administrador";
}

<!-- Page Title Section -->
<section class="page-title section" style="padding-top: 120px;">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Administradores</span>
        <h2>Nuevo Administrador</h2>
        <p>Registra un nuevo administrador en el sistema de préstamos</p>
    </div>
</section>

<!-- Create Form Section -->
<section id="create-manager" class="section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <!-- Form Header -->
                        <div class="form-header mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-plus-fill me-3" style="font-size: 2rem; color: #3b7ddd;"></i>
                                <div>
                                    <h4 class="mb-1">Información del Administrador</h4>
                                    <p class="text-muted mb-0">Completa todos los campos requeridos</p>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div class="row">

                                <!-- Nombre Completo -->
                                <div class="col-12 mb-3">
                                    <label asp-for="Nombre" class="form-label">
                                        <i class="bi bi-person-circle text-primary me-1"></i>
                                        Nombre Completo
                                    </label>
                                    <input asp-for="Nombre"
                                           class="form-control"
                                           placeholder="Ej: Juan Pérez García"
                                           maxlength="100" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Ingresa el nombre completo del administrador
                                    </div>
                                </div>


                                

                                

                            </div>

                            <!-- Security Guidelines -->
                            <div class="alert alert-info mb-4" role="alert">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-shield-check me-3" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <h6 class="mb-2">Recomendaciones de seguridad</h6>
                                        <ul class="mb-0 small">
                                            <li>Usa una contraseña fuerte con mayúsculas, minúsculas y números</li>
                                            <li>No compartas las credenciales con otros usuarios</li>
                                            <li>El usuario debe ser único en el sistema</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Divider -->
                            <hr class="my-4">

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="bi bi-check-circle me-2"></i>Crear Administrador
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

                <!-- Info Card -->
                <div class="card mt-4 border-0 bg-light" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-info-circle-fill text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <h6 class="mb-2">Información importante</h6>
                                <p class="mb-0 small text-muted">
                                    Los administradores tienen acceso completo al sistema de préstamos de dispositivos.
                                    Podrán gestionar dispositivos, crear préstamos y ver reportes.
                                    Asegúrate de proporcionar credenciales seguras.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

<!-- Custom Styles -->
<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .form-label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.625rem 0.875rem;
        transition: all 0.3s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3b7ddd;
            box-shadow: 0 0 0 0.2rem rgba(59, 125, 221, 0.15);
        }

    .input-group-text {
        border-radius: 8px 0 0 8px;
        background-color: #f8f9fa;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }

    .input-group .btn {
        border-radius: 0 8px 8px 0;
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }

    .btn {
        border-radius: 8px;
        padding: 0.625rem 1.25rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #3b7ddd;
        border-color: #3b7ddd;
    }

        .btn-primary:hover {
            background-color: #2e6bc6;
            border-color: #2e6bc6;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(59, 125, 221, 0.3);
        }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
    }

    .text-danger {
        display: block;
        margin-top: 0.25rem;
    }

    .password-strength .progress {
        border-radius: 4px;
        background-color: #e9ecef;
    }

    .progress-bar {
        transition: width 0.3s ease, background-color 0.3s ease;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        border-radius: 8px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Inicializar animaciones AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });

        

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const nombre = document.querySelector('[name="Nombre"]').value;

            if (!nombre ) {
                e.preventDefault();
                alert('Por favor, completa todos los campos requeridos.');
            }

        });
    </script>
}