@using PrestamoDispositivos.DTO
@model List<deviceDTO>
@{
    ViewData["Title"] = "Gestión de Dispositivos";
}

<!-- Page Title Section -->
<section class="page-title section" style="padding-top: 120px;">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Dispositivos</span>
        <h2>Gestión de Dispositivos</h2>
        <p>Administra todos los dispositivos tecnológicos disponibles para préstamo en tu organización</p>
    </div>
</section>

<!-- Devices List Section -->
<section id="devices" class="section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <!-- Action Bar -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">Total de dispositivos: <span class="badge bg-primary">@Model.Count</span></h4>
                    </div>
                    <div>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("DeviceManAdmin"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Nuevo Dispositivo
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="row" data-aos="fade-up" data-aos-delay="200">
                <div class="col-12">
                    <div class="card shadow-sm text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-laptop" style="font-size: 4rem; color: #ccc;"></i>
                            <h3 class="mt-3">No hay dispositivos registrados</h3>
                            <p class="text-muted">Comienza agregando tu primer dispositivo al sistema</p>
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("DeviceManAdmin"))
                            {
                                <a asp-action="Create" class="btn btn-primary mt-3">
                                    <i class="bi bi-plus-circle me-2"></i>Crear Primer Dispositivo
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Devices Grid -->
            <div class="row gy-4">
                @foreach (deviceDTO device in Model)
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body">
                                <!-- Device Icon & Status -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="device-icon">
                                        @* Icono según el tipo de dispositivo *@
                                        @if (device.Tipo.ToLower().Contains("laptop"))
                                        {
                                            <i class="bi bi-laptop" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                                        }
                                        else if (device.Tipo.ToLower().Contains("desktop") || device.Tipo.ToLower().Contains("pc"))
                                        {
                                            <i class="bi bi-pc-display" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                                        }
                                        else if (device.Tipo.ToLower().Contains("tablet"))
                                        {
                                            <i class="bi bi-tablet" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-device-hdd" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                                        }
                                    </div>
                                    <div>
                                        @* Badge de estado *@
                                        @if (device.EstadoDisp.ToLower() == "disponible")
                                        {
                                            <span class="badge bg-success">Disponible</span>
                                        }
                                        else if (device.EstadoDisp.ToLower().Contains("préstamo") || device.EstadoDisp.ToLower().Contains("prestamo"))
                                        {
                                            <span class="badge bg-warning text-dark">En Préstamo</span>
                                        }
                                        else if (device.EstadoDisp.ToLower().Contains("mantenimiento"))
                                        {
                                            <span class="badge bg-info">Mantenimiento</span>
                                        }
                                        else if (device.EstadoDisp.ToLower().Contains("dañado") || device.EstadoDisp.ToLower().Contains("danado"))
                                        {
                                            <span class="badge bg-danger">Dañado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@device.EstadoDisp</span>
                                        }
                                    </div>
                                </div>

                                <!-- Device Type -->
                                <h5 class="card-title mb-3">@device.Tipo</h5>

                                <!-- Device Specs -->
                                <div class="device-specs mb-3">
                                    <div class="spec-item mb-2">
                                        <i class="bi bi-cpu text-primary me-2"></i>
                                        <strong>Procesador:</strong>
                                        <span class="text-muted">@device.Procesador</span>
                                    </div>
                                    <div class="spec-item mb-2">
                                        <i class="bi bi-hdd text-primary me-2"></i>
                                        <strong>Almacenamiento:</strong>
                                        <span class="text-muted">@device.Almacenamiento GB</span>
                                    </div>
                                    <div class="spec-item mb-2">
                                        <i class="bi bi-gpu-card text-primary me-2"></i>
                                        <strong>Tarjeta Gráfica:</strong>
                                        <span class="text-muted">@device.TarjetaGrafica</span>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("DeviceManAdmin"))
                                {
                                    <div class="d-flex gap-2 mt-3">
                                        <a asp-action="Edit" asp-route-id="@device.IdDisp" class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="bi bi-pencil me-1"></i>Editar
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger flex-fill"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal-@device.IdDisp">
                                            <i class="bi bi-trash me-1"></i>Eliminar
                                        </button>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("DeviceManAdmin"))
                    {
                        <!-- Modal de Confirmación de Eliminación -->
                        <div class="modal fade" id="deleteModal-@device.IdDisp" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>¿Estás seguro de que deseas eliminar el dispositivo <strong>@device.Tipo</strong>?</p>
                                        <p class="text-muted mb-0"><small>Esta acción no se puede deshacer.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <form asp-action="Delete" asp-route-id="@device.IdDisp" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }

    </div>
</section>

<!-- Custom Styles -->
<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .card {
        border: none;
        border-radius: 10px;
    }

    .device-specs {
        font-size: 0.9rem;
    }

    .spec-item {
        display: flex;
        align-items: center;
        padding: 0.25rem 0;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }

    .btn-outline-primary:hover,
    .btn-outline-danger:hover {
        transform: scale(1.02);
    }
</style>

@section Scripts {
    <script>
        // Inicializar animaciones AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });
    </script>
}