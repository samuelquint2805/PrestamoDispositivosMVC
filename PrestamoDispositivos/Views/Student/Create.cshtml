@model PrestamoDispositivos.DTO.StudentDTO
@{
    ViewData["Title"] = "Registrar Estudiante";
}

<h2 class="mb-4">Registrar Nuevo Estudiante</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

   

    <div class="mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" class="form-control" type="number" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="semestreCursado" class="form-label"></label>
        <input asp-for="semestreCursado" class="form-control" type="number" />
        <span asp-validation-for="semestreCursado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Carnet" class="form-label"></label>
        <input asp-for="Carnet" class="form-control" type="number" />
        <span asp-validation-for="Carnet" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
