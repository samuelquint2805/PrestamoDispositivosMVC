@model IEnumerable<PrestamoDispositivos.DTO.StudentDTO>
@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2 class="mb-4">Lista de Estudiantes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Nuevo Estudiante</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Teléfono</th>
            <th>Edad</th>
            <th>Semestre</th>
            <th>Correo</th>
            <th>Carnet</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Usuario</td>
                    <td>@item.Telefono</td>
                    <td>@item.Edad</td>
                    <td>@item.semestreCursado</td>
                    <td>@item.CorreoIns</td>
                    <td>@item.Carnet</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEst" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@item.IdEst" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Estás seguro de eliminar este estudiante?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No hay estudiantes registrados.</td>
            </tr>
        }
    </tbody>
</table>
