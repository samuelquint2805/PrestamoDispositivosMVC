@using PrestamoDispositivos.DTO;
@model IEnumerable<ApplicationUserDTO>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<section class="page-title section" style="padding-top: 120px;">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Usuarios</span>
        <h2>Administración de Usuarios 👤</h2>
        <p>Gestiona todos los perfiles de usuario y sus roles en el sistema de préstamos.</p>
    </div>
</section>

<section id="users" class="section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">Total de usuarios: <span class="badge bg-primary">@Model.Count()</span></h4>
                    </div>
                    <div>
                        <a asp-action="Register" class="btn btn-primary">
                            <i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo Usuario
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="row" data-aos="fade-up" data-aos-delay="200">
                <div class="col-12">
                    <div class="card shadow-sm text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-person-exclamation" style="font-size: 4rem; color: #ccc;"></i>
                            <h3 class="mt-3">No hay usuarios registrados</h3>
                            <p class="text-muted">Comienza registrando un nuevo administrador o estudiante.</p>
                            <a asp-action="Register" class="btn btn-primary mt-3">
                                <i class="bi bi-person-plus-fill me-2"></i>Registrar Primer Usuario
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row gy-4">
                @foreach (var user in Model)
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body">

                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="user-icon">
                                        <i class="bi bi-person-circle" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                                    </div>
                                    <div>
                                        @* Badge de Rol *@
                                        <span class="badge @(user.Role == "Estudiante" ? "bg-info text-dark" : "bg-primary") me-2">
                                            @user.Role
                                        </span>
                                        @* Badge de Estado *@
                                        @if (user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTime.UtcNow)
                                        {
                                            <span class="badge bg-danger">BLOQUEADO</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">ACTIVO</span>
                                        }
                                    </div>
                                </div>

                                <h5 class="card-title mb-3">@user.UserName</h5>

                                <div class="user-details mb-3">
                                    <div class="detail-item mb-2">
                                        <i class="bi bi-envelope text-primary me-2"></i>
                                        <strong>Email:</strong>
                                        <span class="text-muted">@user.Email</span>
                                    </div>
                                </div>

                                <div class="d-flex gap-2 mt-3">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil me-1"></i>Editar
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger flex-fill"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal-@user.Id">
                                        <i class="bi bi-trash me-1"></i>Eliminar
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>

                    @* MODAL INDIVIDUAL DE CONFIRMACIÓN DE ELIMINACIÓN (dentro del bucle) *@
                    <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="deleteModalLabel"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>¿Estás seguro de que deseas eliminar al usuario <strong>@user.UserName</strong>?</p>
                                    <p class="text-danger small">
                                        **Advertencia:** Si el usuario tiene préstamos activos, la eliminación puede fallar.
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                                    @* Formulario POST para enviar la solicitud de eliminación *@
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash me-1"></i>Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</section>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .card {
        border: none;
        border-radius: 10px;
    }

    .user-details {
        font-size: 0.95rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        padding: 0.25rem 0;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
    }

    .btn-outline-primary:hover,
    .btn-outline-danger:hover {
        transform: scale(1.02);
    }
</style>

@section Scripts {
    <script>
        // Si usas la librería AOS (Animate On Scroll), asegúrate de inicializarla.
        // Si no la usas, puedes eliminar este bloque de código.
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                mirror: false
            });
        }
    </script>
}