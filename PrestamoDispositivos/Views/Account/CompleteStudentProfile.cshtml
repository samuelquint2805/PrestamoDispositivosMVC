@model PrestamoDispositivos.Models.ViewModels.CompleteStudentProfileViewModel
@{
    ViewData["Title"] = "Completar Perfil de Estudiante";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="bi bi-person-badge text-success" style="font-size: 3rem;"></i>
                        <h3 class="mt-3 fw-bold">Perfil de Estudiante</h3>
                        <p class="text-muted">Completa tu información académica</p>
                    </div>

                    <!-- Progress Indicator -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <small class="text-muted">Paso 2 de 2</small>
                            <small class="text-success fw-semibold">¡Último paso!</small>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>

                    <!-- Formulario -->
                    <form asp-action="CompleteStudentProfile" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <!-- Nombre Completo -->
                            <div class="col-12 mb-3">
                                <label asp-for="Nombre" class="form-label fw-semibold">
                                    <i class="bi bi-person-circle me-1"></i>Nombre Completo
                                </label>
                                <input asp-for="Nombre"
                                       class="form-control"
                                       placeholder="Ej: Ana María López"
                                       autofocus />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <!-- Teléfono -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-semibold">
                                    <i class="bi bi-telephone me-1"></i>Teléfono
                                </label>
                                <input asp-for="Telefono"
                                       class="form-control"
                                       placeholder="Ej: 3001234567" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            <!-- Edad -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Edad" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Edad
                                </label>
                                <input asp-for="Edad"
                                       type="number"
                                       class="form-control"
                                       min="15"
                                       max="100"
                                       placeholder="Ej: 20" />
                                <span asp-validation-for="Edad" class="text-danger small"></span>
                            </div>

                            <!-- Carnet -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Carnet" class="form-label fw-semibold">
                                    <i class="bi bi-credit-card me-1"></i>Carnet Estudiantil
                                </label>
                                <input asp-for="Carnet"
                                       type="number"
                                       class="form-control"
                                       placeholder="Ej: 202312345" />
                                <span asp-validation-for="Carnet" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    Tu número de identificación único
                                </small>
                            </div>

                            <!-- Semestre -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="SemestreCursado" class="form-label fw-semibold">
                                    <i class="bi bi-book me-1"></i>Semestre Actual
                                </label>
                                <select asp-for="SemestreCursado" class="form-select">
                                    <option value="">-- Selecciona --</option>
                                    <option value="1">1° Semestre</option>
                                    <option value="2">2° Semestre</option>
                                    <option value="3">3° Semestre</option>
                                    <option value="4">4° Semestre</option>
                                    <option value="5">5° Semestre</option>
                                    <option value="6">6° Semestre</option>
                                    <option value="7">7° Semestre</option>
                                    <option value="8">8° Semestre</option>
                                    <option value="9">9° Semestre</option>
                                    <option value="10">10° Semestre</option>
                                    <option value="11">11° Semestre</option>
                                    <option value="12">12° Semestre</option>
                                </select>
                                <span asp-validation-for="SemestreCursado" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info border-0 mb-4" role="alert">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            <small>
                                Esta información se usará para gestionar tus préstamos de dispositivos y
                                asegurar que cumplas con los requisitos académicos.
                            </small>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-success w-100 py-2 fw-semibold">
                            <i class="bi bi-check-circle me-2"></i>Completar Registro
                        </button>
                    </form>

                </div>
            </div>

            <!-- Benefits Card -->
            <div class="card mt-4 border-0 bg-light" role="alert">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="bi bi-star-fill text-warning me-2"></i>
                        Beneficios de tu cuenta
                    </h6>
                    <ul class="mb-0 small">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                            Solicitar préstamos de dispositivos tecnológicos
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                            Ver el historial de tus préstamos
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                            Renovar préstamos activos
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                            Acceso prioritario a equipos disponibles
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-format phone number
        document.querySelector('[name="Telefono"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 10) value = value.substring(0, 10);
            e.target.value = value;
        });

        // Validate carnet format
        document.querySelector('[name="Carnet"]')?.addEventListener('blur', function(e) {
            const carnet = e.target.value;
            if (carnet && carnet.length < 6) {
                alert('El carnet debe tener al menos 6 dígitos');
            }
        });
    </script>
}

<style>
    .card {
        transition: transform 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

        .btn-success:hover {
            background-color: #157347;
            border-color: #146c43;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(25, 135, 84, 0.3);
        }

    .progress {
        border-radius: 4px;
        background-color: #e9ecef;
    }

    .alert-info {
        background-color: #cff4fc;
        border: none;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>