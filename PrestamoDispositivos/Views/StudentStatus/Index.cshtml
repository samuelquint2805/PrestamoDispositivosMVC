@model IEnumerable<PrestamoDispositivos.DTO.studentStatusDTO>
@{
    ViewData["Title"] = "Estados de Estudiantes";
}

<h2 class="mb-4">Lista de Estados de Estudiantes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Nuevo Estado</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Estado del Estudiante</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.EstEstu</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdStatus" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@item.IdStatus" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Estás seguro de eliminar este estado?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center text-muted">No hay estados registrados.</td>
            </tr>
        }
    </tbody>
</table>
