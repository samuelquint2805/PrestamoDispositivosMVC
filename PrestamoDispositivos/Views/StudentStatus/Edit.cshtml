@model PrestamoDispositivos.DTO.studentStatusDTO
@{
    ViewData["Title"] = "Editar Estado de Estudiante";
}

<h2 class="mb-4">Editar Estado de Estudiante</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdStatus" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="EstEstu" class="form-label"></label>
        <input asp-for="EstEstu" class="form-control" />
        <span asp-validation-for="EstEstu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
