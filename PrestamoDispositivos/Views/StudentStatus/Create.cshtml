@model PrestamoDispositivos.DTO.studentStatusDTO
@{
    ViewData["Title"] = "Registrar Estado de Estudiante";
}

<h2 class="mb-4">Registrar Nuevo Estado de Estudiante</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="EstEstu" class="form-label"></label>
        <input asp-for="EstEstu" class="form-control" placeholder="Ejemplo: Activo, Suspendido, Egresado..." />
        <span asp-validation-for="EstEstu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
