@{
    ViewData["Title"] = "Inicio - Sistema de Préstamos";
}

<!-- Hero Section -->
<section id="hero" class="hero section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 data-aos="fade-up" data-aos-delay="200">Sistema de Gestión de Préstamos de Dispositivos</h1>
                    <p data-aos="fade-up" data-aos-delay="300">
                        Administra de manera eficiente todos los dispositivos tecnológicos de tu organización.
                        Control total sobre préstamos, disponibilidad y mantenimiento.
                    </p>
                    <div class="hero-cta" data-aos="fade-up" data-aos-delay="400">
                        <a asp-controller="Device" asp-action="Index" class="btn-primary">Ver Dispositivos</a>
                        <a asp-controller="Device" asp-action="Create" class="btn-secondary">
                            <i class="bi bi-plus-circle"></i>
                            Agregar Dispositivo
                        </a>
                    </div>
                    <div class="hero-stats" data-aos="fade-up" data-aos-delay="500">
                        <div class="stat-item">
                            <div class="stat-number">24/7</div>
                            <div class="stat-label">Disponibilidad</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">100%</div>
                            <div class="stat-label">Control</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">Fast</div>
                            <div class="stat-label">Gestión Rápida</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="hero-image" data-aos="fade-left" data-aos-delay="300">
                    <img src="~/assets/img/about/about-square-10.webp" alt="Sistema de Préstamos" class="img-fluid">
                    <div class="floating-card" data-aos="zoom-in" data-aos-delay="600">
                        <div class="card-icon">
                            <i class="bi bi-laptop"></i>
                        </div>
                        <div class="card-content">
                            <h5>Gestión Inteligente</h5>
                            <div class="growth-percentage">+100%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- /Hero Section -->
<!-- Services Section -->
<section id="services" class="services section">
    <div class="container section-title" data-aos="fade-up">
        <span class="subtitle">Funcionalidades</span>
        <h2>¿Qué Puedes Hacer?</h2>
        <p>Explora las herramientas disponibles para gestionar dispositivos, usuarios y préstamos de forma eficiente.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-5">
            <!-- Dispositivos -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <a asp-controller="Device" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-laptop"></i>
                        </div>
                        <h3>Gestionar Dispositivos</h3>
                        <p>Administra el inventario completo de dispositivos tecnológicos.</p>
                        <span class="service-link">Ver Dispositivos <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>

            <!-- Préstamos -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <a asp-controller="Loan" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h3>Control de Préstamos</h3>
                        <p>Registra y controla el préstamo de dispositivos a los estudiantes.</p>
                        <span class="service-link">Ver Préstamos <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>

            <!-- Estudiantes -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <a asp-controller="Student" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h3>Gestión de Estudiantes</h3>
                        <p>Administra la información de los estudiantes vinculados al sistema.</p>
                        <span class="service-link">Ver Estudiantes <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>

            <!-- Administradores -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <a asp-controller="DeviceManager" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-person-gear"></i>
                        </div>
                        <h3>Gestión de Administradores</h3>
                        <p>Controla los administradores y permisos de acceso al sistema.</p>
                        <span class="service-link">Ver Administradores <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>

            <!-- Eventos de Préstamo -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <a asp-controller="LoanEvent" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <h3>Eventos de Préstamo</h3>
                        <p>Consulta el historial de eventos relacionados con los préstamos.</p>
                        <span class="service-link">Ver Eventos <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>

            <!-- Estado de Estudiantes -->
            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <a asp-controller="StudentStatus" asp-action="Index" class="text-decoration-none">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="bi bi-person-check"></i>
                        </div>
                        <h3>Estado de Estudiantes</h3>
                        <p>Verifica y actualiza el estado académico y de préstamo de los estudiantes.</p>
                        <span class="service-link">Ver Estados <i class="bi bi-arrow-right"></i></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section><!-- /Services Section -->
<!-- Quick Stats Section -->
<section id="stats" class="section light-background">
    <div class="container" data-aos="fade-up">
        <div class="row gy-4">

            <!-- Dispositivos -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-laptop" style="font-size: 2.5rem; color: #3b7ddd;"></i>
                        <h5 class="mt-3 mb-1">Dispositivos</h5>
                        <p class="text-muted">@(ViewBag.TotalDevices ?? "0")</p>
                    </div>
                </div>
            </div>

            <!-- Préstamos -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-arrow-left-right" style="font-size: 2.5rem; color: #ffc107;"></i>
                        <h5 class="mt-3 mb-1">Préstamos</h5>
                        <p class="text-muted">@(ViewBag.TotalLoans ?? "0")</p>
                    </div>
                </div>
            </div>

            <!-- Estudiantes -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-people-fill" style="font-size: 2.5rem; color: #28a745;"></i>
                        <h5 class="mt-3 mb-1">Estudiantes</h5>
                        <p class="text-muted">@(ViewBag.TotalStudents ?? "0")</p>
                    </div>
                </div>
            </div>

            <!-- Administradores -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-person-gear" style="font-size: 2.5rem; color: #6610f2;"></i>
                        <h5 class="mt-3 mb-1">Administradores</h5>
                        <p class="text-muted">@(ViewBag.TotalManagers ?? "0")</p>
                    </div>
                </div>
            </div>

            <!-- Eventos -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-clock-history" style="font-size: 2.5rem; color: #17a2b8;"></i>
                        <h5 class="mt-3 mb-1">Eventos</h5>
                        <p class="text-muted">@(ViewBag.TotalEvents ?? "0")</p>
                    </div>
                </div>
            </div>

            <!-- Estados -->
            <div class="col-lg-2 col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body py-4">
                        <i class="bi bi-person-check" style="font-size: 2.5rem; color: #20c997;"></i>
                        <h5 class="mt-3 mb-1">Estados</h5>
                        <p class="text-muted">@(ViewBag.TotalStatuses ?? "0")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- /Stats Section -->
<!-- CTA Section -->
<section id="cta" class="section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="container text-center" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="mb-4">¿Listo para gestionar tus dispositivos?</h2>
                <p class="lead mb-4">
                    Comienza ahora a administrar de manera eficiente todos los recursos de tu organización.
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a asp-controller="Device" asp-action="Index" class="btn btn-light btn-lg px-5">
                        <i class="bi bi-laptop me-2"></i>Ver Dispositivos
                    </a>
                    <a asp-controller="Device" asp-action="Create" class="btn btn-outline-light btn-lg px-5">
                        <i class="bi bi-plus-circle me-2"></i>Agregar Nuevo
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Estilos personalizados -->
<style>
    .service-item {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

        .service-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
        }

    .service-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

        .service-icon i {
            font-size: 2rem;
            color: white;
        }

    .service-link {
        color: #3b7ddd;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1) !important;
        }

    #cta {
        padding: 5rem 0;
    }
</style>

@section Scripts {
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            mirror: false
        });
    </script>
}
